{% extends "layout.html.j2" %}
{% block body %}

    {% include 'masto_auth.html.j2' %}

    <p>Community Stream</p>

    <div class="community_posts">
    {% for post in posts %}
        <div class="comm_post">
            <div class="user">Posted by: <a target=_new" href="https://{{ post.user.profile_link }}">{{ post.user.mastodon_user }}</a></div>
            <div class="comment">{{ post.comment }}</div>
            <div class="link"><a target=_new" href="{{ post.post_link }}">Post</a></div>
            <div class="preview">
            {{ post.preview_content() }}
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
